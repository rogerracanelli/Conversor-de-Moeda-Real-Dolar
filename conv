<!DOCTYPE html>
<html>
  <head>
    <title>Currency Converter</title>
    <style>
      /* styles for the interface */
      #converter {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        text-align: center;
      }
      input[type="text"] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
      }
      input[type="button"] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      input[type="button"]:hover {
        background-color: #45a049;
      }
      #result {
        margin-top: 20px;
        font-size: 18px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div id="converter">
      <h2>Currency Converter</h2>
      <label for="dollar-amount">Enter dollar amount:</label>
      <input type="text" id="dollar-amount">
      <input type="button" value="Convert" onclick="convert()">
      <p id="result"></p>
    </div>

    <script>
      // exchange rate (updated as of 2021-09)
      const exchangeRate = 5.71;

      // function to convert dollars to reais
      function convertDollarToReal(dollar) {
        return dollar * exchangeRate;
      }

      // function to handle the button click and display the result
      function convert() {
        const dollarAmount = document.getElementById("dollar-amount").value;
        const realAmount = convertDollarToReal(dollarAmount);
        document.getElementById("result").innerHTML = `${dollarAmount} dollars is equal to ${realAmount} reais.`;
      }
    </script>
  </body>
</html>
